{% extends "GILQueazyBundle::base.html.twig" %}

{% block title %}Mes Quiz{% endblock %}

{% set menu_selected = 'Accueil' %}

{% block body %}
    <h1>MES QUIZ</h1>
    
    <h3><a href="#">Ajouter un Quiz</a></h3>

    <table>
        <tr>
            <td>ID</td>
            <td>TITRE</td>
            <td>AUTEUR</td>
            <td>DATE</td>
        </tr>
    {% for quiz in listQuiz %}
        <tr>
            <td>{{ quiz.id }}</td>
            <td>{{ quiz.titre }}</td>
            <td>{{ quiz.auteur }}</td>
            <td>{{ quiz.date|date("m/d/Y") }}</td>
            <td>Modifier</td>
            <td>Supprimer</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}