{% extends "GILQueazyBundle::base.html.twig" %}

{% block title %}Ajout de Question{% endblock %}

{% set menu_selected = 'AddQuiz' %}

{% block body %}
    <h1>AJOUT DE QUESTION</h1>

    <form action="{{ path('gil_queazy_accueil') }}user/{{ user.id }}/add/{{ quiz.id }}/question"
          method="POST" class="form">
        <div class="row">
            {{ form_widget(form.questionTypeContenu) }}
            {{ form_widget(form.questionContenu) }}
        </div>
        <div class="row">
            {{ form_widget(form1.reponseTypeContenu) }}
            {{ form_widget(form1.reponseContenu) }}

            {{ form_widget(form2.reponseTypeContenu) }}
            {{ form_widget(form2.reponseContenu) }}
        </div>
        <div class="row">
            {{ form_widget(form3.reponseTypeContenu) }}
            {{ form_widget(form3.reponseContenu) }}
            {{ form_widget(form4.reponseTypeContenu) }}
            {{ form_widget(form4.reponseContenu) }}
        </div>
        <div class="row">
            <select name="select">
                <option value="reponse1">Réponse 1</option>
                <option value="reponse2" selected>Réponse 2</option>
                <option value="reponse3">Réponse 3</option>
                <option value="reponse4">Réponse 4</option>
            </select>
        </div>
        <div class="row">
            <div class="large-12 columns">
                {{ form_widget(form.Valider) }}
                {{ form_widget(form.Annuler) }}
            </div>
        </div>
        {{ form_widget(form._token) }}
    </form>
{% endblock %}