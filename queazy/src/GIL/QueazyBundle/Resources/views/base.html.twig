 {# This block is used to declare and store global variables. #}

{# Menu links #}
{%
    set menuItems = [
        { name: 'Accueil'  , path: 'accueil' },
        { name: 'Quiz'     , path: 'quiz'    },
        { name: 'Connexion', path: 'user'   }
    ]
%}
<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} | Queazy</title>

        <!-- Inclusion du CSS -->
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/queazy/css/vendor/jquery.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/queazy/css/foundation.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/queazy/css/app.css') }}"/>
        {% endblock %}

        <!-- Inclusion du JS -->
        {% block scripts %}
            <script src="{{ asset('bundles/queazy/js/fundation.min.js') }}"></script>
            <script type="text/javascript"
                    src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML">
            </script>
        {% endblock %}

    </head>
    <body>
        <div class="column row container">

            <!-- HEADER -->
            {% block header %}
                <div class="row header">
                    <h1 class="text-center title">
                        <a href="{{ path('gil_queazy_accueil') }}"><span class="rotate">Q</span>ueazy</a>
                    </h1>
                </div>
            {% endblock %}

            <!-- Liens de navigation -->
            {% block navigation %}
                {% include 'GILQueazyBundle::components/menu.html.twig' with menuItems %}
            {% endblock %}

            <!-- Partie principale (BODY) -->
            <div class="row body">
                {% block body %}
                {% endblock %}
            </div>

            <!-- Footer -->
            {% block footer %}
                <div class="row footer">
                    <p class="text-center">Made with <i class="fa fa-heart"></i> and Symfony</p>
                </div>
            {% endblock %}
        </div>
        <script src="{{ asset('bundles/queazy/js/app.js') }}"></script>
    </body>
</html>
